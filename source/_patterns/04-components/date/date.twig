{% set classes = [
  'date',
  modifier_classes ? modifier_classes,
]|join(' ')|trim %}

<div class="{{ classes }}">
  {% if format == 'long-date' %}
    {% include '@base/date-formats/long-date.twig' %}
  {% elseif format == 'long-datetime' %}
    {% include '@base/date-formats/long-datetime.twig' %}
  {% elseif format == 'medium-date' %}
    {% include '@base/date-formats/medium-date.twig' %}
  {% elseif format == 'medium-datetime' %}
    {% include '@base/date-formats/medium-datetime.twig' %}
  {% elseif format == 'short-date' %}
    {% include '@base/date-formats/short-date.twig' %}
  {% elseif format == 'short-datetime' %}
    {% include '@base/date-formats/short-datetime.twig' %}
  {% else %}
    {{ date_content }}
  {% endif %}
</div>
