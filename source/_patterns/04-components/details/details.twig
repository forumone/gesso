<details class="details js-details js-form-wrapper" data-drupal-selector="edit-details" id="edit-details"{% if is_open %} open{% endif %}>
  <summary class="details__summary" role="button" aria-controls="edit-details" aria-expanded="true" aria-pressed="true">{{ details_summary }}</summary>
  <div class="details__content">
    <div class="details__description">{{ details_description }}</div>
    {{ details_content }}
  </div>
</details>
