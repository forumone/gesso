{% set classes = [
  'l-nav',
  modifier_classes ? modifier_classes,
]|join(' ')|trim %}

{% if pattern_lab and not nav_content %}
  {% import '@macros/gesso.macro.twig' as macros %}
  {% set nav_content = macros.sample_content('Nav Layout Content') %}
{% endif %}

<nav class="{{ classes }}" role="navigation">
  <h2 class="visually-hidden">{{ label }}</h2>
  {% block content %}
    {{ nav_content }}
  {% endblock %}
</nav>
