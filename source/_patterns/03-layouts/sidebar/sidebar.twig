{% set additional_attributes = {
  'class': [
    'l-sidebar',
    has_multiple_sidebar ? ' l-sidebar--multi-2',
    modifier_classes ? modifier_classes,
  ],
} %}

{% set additional_sidebar_header_region_attributes = {
  'class': ['l-sidebar__full'],
} %}

{% set additional_sidebar_first_region_attributes = {
  'class': ['l-sidebar__sidebar'],
} %}

{% set additional_sidebar_main_region_attributes = {
  'class': ['l-sidebar__main'],
} %}

{% set additional_sidebar_second_region_attributes = {
  'class': ['l-sidebar__sidebar'],
} %}

{% if pattern_lab and not sidebar_header_content %}
  {% import '@macros/gesso.macro.twig' as macros %}
  {% set sidebar_header_content = macros.sample_content('Header Content') %}
{% endif %}

{% if pattern_lab and not sidebar_first_content %}
  {% import '@macros/gesso.macro.twig' as macros %}
  {% set sidebar_first_content = macros.sample_content('Optional Sidebar Content') %}
{% endif %}

{% if pattern_lab and not sidebar_main_content %}
  {% import '@macros/gesso.macro.twig' as macros %}
  {% set sidebar_main_content = macros.sample_content('Main Content') %}
{% endif %}

{% if pattern_lab and not sidebar_second_content %}
  {% import '@macros/gesso.macro.twig' as macros %}
  {% set sidebar_second_content = macros.sample_content('Optional Sidebar Content') %}
{% endif %}

<div {{ add_attributes(additional_attributes) }}>

  {% if sidebar_header_content %}
    <div {{ add_attributes(additional_sidebar_header_region_attributes, 'region_attributes.header') }}>
      {{ sidebar_header_content }}
    </div>
  {% endif %}

  {% if sidebar_first_content %}
    <aside {{ add_attributes(additional_sidebar_first_region_attributes, 'region_attributes.sidebar_first') }}>
      {{ sidebar_first_content }}
    </aside>
  {% endif %}

  {% if sidebar_main_content %}
    <div {{ add_attributes(additional_sidebar_main_region_attributes, 'region_attributes.main') }}>
      {{ sidebar_main_content }}
    </div>
  {% endif %}

  {% if sidebar_second_content %}
    <aside {{ add_attributes(additional_sidebar_second_region_attributes, 'region_attributes.sidebar_second') }}>
      {{ sidebar_second_content }}
    </aside>
  {% endif %}
</div>
