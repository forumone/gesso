{% set classes = [
  'l-footer',
  modifier_classes ? modifier_classes,
]|join(' ')|trim %}

{% set constrain_classes = [
  'l-constrain',
  constrain_modifier_classes ? constrain_modifier_classes,
]|join(' ')|trim %}

<footer class="{{ classes }}" role="contentinfo">
  {% if has_constrain %}
    <div class="{{ constrain_classes }}">
  {% endif %}
  {% block content %}
    Footer Content
  {% endblock %}
  {% if has_constrain %}
    </div>
  {% endif %}
</footer>
