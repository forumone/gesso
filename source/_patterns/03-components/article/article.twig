{% set additional_attributes = {
  'class': ['article']
} %}

<article {{ add_attributes(additional_attributes) }}>
  {% block title %}
    {% include '@components/page-title/page-title.twig' with {
      'page_title': article_page_title
    } %}
  {% endblock %}

  {% if has_footer %}
    <footer>
      {% block footer %}
        {{ footer }}
      {% endblock %}
    </footer>
  {% endif %}

  {% block main %}
    {{ content }}
  {% endblock %}
</article>
