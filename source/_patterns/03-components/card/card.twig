<div class="card">
  <div class="card__body">
    <div class="card__header">
      <h3 class="card__title">
        {% if url %}<a href="{{ url }}">{% endif %}
          {{ title }}
        {% if url %}</a>{% endif %}
      </h3>
    </div>
    <div class="card__content">
      {{ content }}
    </div>
    {% if footer %}
      <div class="card__footer">
        {{ footer }}
      </div>
    {% endif %}
  </div>
  {% if media %}
    <div class="card__media">
      {% if url %}<a href="{{ url }}">{% endif %}
        {{ media }}
      {% if url %}</a>{% endif %}
    </div>
  {% endif %}
</div>
