{#
 /**
  * @file
  * Theme override to display primary and secondary local tasks.
  *
  * Available variables:
  * - primary: HTML list items representing primary tasks.
  * - secondary: HTML list items representing primary tasks.
  * - modifier_class: Variant classes to modify component.
  * - heading: Accessible heading.
  * - tabs: Primary or Secondary tabs.
  *
  */
#}

{% if primary %}
  {% include '@components/tabs/tabs.twig' with {
    'modifier_classes': 'tabs--primary',
    'heading': 'Primary tabs'|t,
    'tabs': primary
  } only %}
{% endif %}

{% if secondary %}
  {% include '@components/tabs/tabs.twig' with {
    'modifier_classes': 'tabs--secondary',
    'heading': 'Secondary tabs'|t,
    'tabs': secondary
  } only %}
{% endif %}
