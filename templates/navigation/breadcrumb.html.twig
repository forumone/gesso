{#
/**
 * @file
 * Theme override for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 * - include_current_page: Whether to add the current page to the breadcrumb
 *   list. Controlled via theme setting.
 * - page_title: The page title, for use in the actual content. This only has
 *   content if include_current_page is true.
 */
#}
{% if breadcrumb %}
  {% include '@components/breadcrumb/breadcrumb.twig' with {
    'modifier_classes': '',
    'title_modifier_classes': '',
    'hide_title': true,
    'title_element': 'h2',
    'title': 'Breadcrumb'|t,
    'breadcrumb': breadcrumb,
  } %}
{% endif %}
