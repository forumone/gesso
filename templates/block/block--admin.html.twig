{#
/**
 * @file
 * Theme for an admin block.
 *
 * This block template gets extended by blocks that should only show the wrapper
 * when a user is logged in.
 */
#}
{% set classes = [
  'c-block',
  'c-block--admin',
] %}

{% set attributes = attributes.addClass(classes) %}

{% set block_content %}
  {% block block_content %}
    {{ content }}
  {% endblock %}
{% endset %}

{% embed '@components/block/block.twig' with {
  'hide_wrapper': not logged_in,
  'has_constrain': false,
  'hide_content_wrapper': true,
  'label': false,
} %}

  {% block content %}
    {{ block_content }}
  {% endblock %}

{% endembed %}
