{% for webfont in webfonts %}
  <div class="pattern-lab-font">
    <h3 class="pattern-lab-font__family" style="{{ webfont.style }}">{{ webfont.family_name }}</h3>
    {% for font in webfont.font %}
      <div class="pattern-lab-font__item">
        <div class="pattern-lab-font__preview-character" style="{{ font.font_preview_style }}">{{ font.font_preview_character }}</div>
        <div class="pattern-lab-font__preview" style="{{ font.font_preview_style }}">{{ font.font_preview }}</div>
        <div class="pattern-lab-font__preview-meta">
          <div class="pattern-lab-font__name">{{ font.font_name }}</div>
          <div class="pattern-lab-font__weight"><span class="pattern-lab-font__label">Weight:</span> {{ font.font_weight }}</div>
          <div class="pattern-lab-font__style"><span class="pattern-lab-font__label">Style:</span> {{ font.font_style }}</div>
        </div>
      </div>
    {% endfor %}
  </div>
{% endfor %}
