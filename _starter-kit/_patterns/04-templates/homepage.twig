{% set homepage_hero_button %}
  {% include '@components/button/button.twig' with {
    'text': homepage_hero_call_to_action_text,
    'url': homepage_hero_call_to_action_url
  } %}
{% endset %}

{% set homepage_hero %}
  {% include '@components/hero-bg-image/hero-bg-image.twig' with {
    'image': homepage_hero_image,
    'title': homepage_hero_title,
    'has_overlay': true,
    'subtitle': false,
    'summary': homepage_hero_summary,
    'call_to_action_content': homepage_hero_button
  } %}
{% endset %}

{% set homepage_grid %}
  {% include '@layouts/grid/grid.twig' with {
    'modifier_classes': 'l-grid--2col',
    'content': homepage_grid_content
  } %}
{% endset %}

{% include '@layouts/section/section.twig' with {
  'section_title': false,
  'section_content': homepage_hero
} %}

{% include '@layouts/section/section.twig' with {
  'section_title': homepage_grid_title,
  'section_content': homepage_grid
} %}
