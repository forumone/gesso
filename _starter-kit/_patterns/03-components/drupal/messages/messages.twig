<div {% if type == 'error' %} role="alert" {% else %} role="contentinfo" {% endif %} {% if heading %}aria-label="{{ heading }}"{% endif %} class="messages {{ modifier_class }}">
  {% if messages|length > 1 %}
    <h2 class="visually-hidden">{{ heading }}</h2>
    <ul class="messages__list">
      {% for message in messages %}
        <li class="messages__item">{{ message }}</li>
      {% endfor %}
    </ul>
  {% else %}
    <div class="messages__content">
      <h2 class="visually-hidden">{{ heading }}</h2>
      {{- messages|first|raw -}}
    </div>
  {% endif %}
</div>
