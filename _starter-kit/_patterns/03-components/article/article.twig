{% if not classes %}
  {% set classes = [] %}
{% endif %}
{% set classes =
  classes|merge(['article'])|join(' ')|trim
%}

<article{{- attributes.addClass(classes)|raw -}}>
  {% block title %}
    {% include '@components/page-title/page-title.twig' with {
      'page_title': article_page_title
    } %}
  {% endblock %}

  {% if has_footer %}
    <footer>
      {% block footer %}
        {{ footer|raw }}
      {% endblock %}
    </footer>
  {% endif %}

  {% block main %}
    {{ content|raw }}
  {% endblock %}
</article>
