{% set additional_row_attributes = {
  'class': ['view__row'],
} %}

{% if title %}
  <{{ title_element ?: 'h3' }}>{{ title }}</{{ title_element ?: 'h3' }}>
{% endif %}

{% for row in rows %}
  {% if has_wrapper %}
    <{{ element ?: 'div' }} {{ add_attributes(additional_row_attributes) }}>
      {{ row.content }}
    </{{ element ?: 'div' }}>
  {% else %}
    {{ row.content }}
  {% endif %}
{% endfor %}
